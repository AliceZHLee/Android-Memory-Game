<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
    >

            <TextView
                android:id="@+id/matchText"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:background="@null"
                android:inputType="text"
                android:textSize="24dp"/>

            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >



        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_fileName="1127-success.json" />

        <GridLayout
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:columnCount="4"
            android:orientation="horizontal"
            android:rowCount="5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_editor_absoluteX="300dp">

            <ImageView
                android:id="@+id/image_view1"
                android:layout_width="134dp"
                android:layout_height="100dp"
                android:background="@drawable/question_mark"
                android:layout_row="0"
                android:layout_column="0" />

            <ImageView
                android:id="@+id/image_view2"
                android:layout_width="134dp"
                android:layout_height="100dp"
                android:background="@drawable/question_mark"
                android:layout_row="0"
                android:layout_column="1" />

            <ImageView
                android:id="@+id/image_view3"
                android:layout_width="134dp"
                android:layout_height="100dp"
                android:background="@drawable/question_mark"
                android:layout_row="0"
                android:layout_column="2" />

            <ImageView
                android:id="@+id/image_view4"
                android:layout_width="134dp"
                android:layout_height="100dp"
                android:background="@drawable/question_mark"
                android:layout_row="1"
                android:layout_column="0" />

            <ImageView
                android:id="@+id/image_view5"
                android:layout_width="134dp"
                android:layout_height="100dp"
                android:background="@drawable/question_mark"
                android:layout_row="1"
                android:layout_column="1" />

            <ImageView
                android:id="@+id/image_view6"
                android:layout_width="134dp"
                android:layout_height="100dp"
                android:background="@drawable/question_mark"
                android:layout_row="1"
                android:layout_column="2" />

            <ImageView
                android:id="@+id/image_view7"
                android:layout_width="134dp"
                android:layout_height="100dp"
                android:background="@drawable/question_mark"
                android:layout_row="2"
                android:layout_column="0" />

            <ImageView
                android:id="@+id/image_view8"
                android:layout_width="134dp"
                android:layout_height="100dp"
                android:background="@drawable/question_mark"
                android:layout_row="2"
                android:layout_column="1" />

            <ImageView
                android:id="@+id/image_view9"
                android:layout_width="134dp"
                android:layout_height="100dp"
                android:background="@drawable/question_mark"
                android:layout_row="2"
                android:layout_column="2" />

            <ImageView
                android:id="@+id/image_view10"
                android:layout_width="134dp"
                android:layout_height="100dp"
                android:background="@drawable/question_mark"
                android:layout_row="3"
                android:layout_column="0" />

            <ImageView
                android:id="@+id/image_view11"
                android:layout_width="134dp"
                android:layout_height="100dp"
                android:background="@drawable/question_mark"
                android:layout_row="3"
                android:layout_column="1" />

            <ImageView
                android:id="@+id/image_view12"
                android:layout_width="134dp"
                android:layout_height="100dp"
                android:background="@drawable/question_mark"
                android:layout_row="3"
                android:layout_column="2" />

        </GridLayout>
    </LinearLayout>
    </LinearLayout>
